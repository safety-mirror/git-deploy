#!/bin/bash

source ~/.profile

export ENVIRONMENT=$(echo $1 | sed 's/\.git$//')
CMD=$2

cd /git/${ENVIRONMENT}.git
git ls-tree --name-only -r master | grep -Fx config.env 2>&1 > /dev/null
if [ $? -eq 0 ]; then
	source <(git cat-file blob master:config.env)
fi

if [ ! -z "$HOOK_REPO" ]; then
	hook_dir="/git/hooks"
else
	hook_dir="hooks"
fi

if [ -x "${hook_dir}/bin/${CMD}" ]; then
	shift 2
	${hook_dir}/bin/${CMD} "$@"
else
	exit 1
fi
